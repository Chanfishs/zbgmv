{
  "version": 2,
  "builds": [
    {
      "src": "api/process.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9",
        "maxDuration": 300,
        "memory": 1024
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "api/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "api/static/favicon.ico"
    },
    {
      "src": "/api/status/([^/]+)",
      "dest": "api/process.py"
    },
    {
      "src": "/api/process",
      "dest": "api/process.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/process.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
} 